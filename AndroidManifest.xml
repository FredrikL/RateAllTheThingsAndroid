<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tacticalnuclearstrike.rateallthethings">
    <application android:icon="@drawable/icon" android:label="@string/app_name"
                 android:name=".RateAllTheThingsApplication" android:theme="@style/AppTheme">
        <activity android:name=".StartActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.DetailsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.AccountActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Activities.DisplayCommentsActivity" android:screenOrientation="portrait"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="4"
              android:targetSdkVersion="14" />
</manifest>
